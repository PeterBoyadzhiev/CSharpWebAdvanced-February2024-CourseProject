@model IndexViewModel

@{
    ViewData["Title"] = "Explore Umami";
}

<div class="text-center">
    <h2 class="display-4">Welcome to @ViewData["Title"]</h2>
    <hr/>
    <h3>This is your administrative area. You can approve businesses to make them visible to other people, edit before approving, delete or reinstate them.
        You can remove or allow reviews. You can add new categories or delete old ones.
    </h3>
</div>
<hr/>
<div>
 <h4 class="text-center mb-3">Latest businesses for approval:</h4>
    <div class="row">
        @foreach (var business in Model.BusinessesToApprove)
        {
            <partial name="_AdminBusinessPartial" model="@business" />
        }
    </div>
</div>