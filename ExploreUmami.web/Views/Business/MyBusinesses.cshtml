@model List<BusinessAllViewModel>

@{
    ViewData["Title"] = "My Businesses";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr/>

@if(Model.Count == 0)
{
    <h2 class="text-center">No businesses to show. <a asp-controller="Business" asp-action="Add">Add</a> your first business.</h2>
}
else
{
    <div class="row">
        @foreach (var business in Model)
        {
            <partial name="_BusinessPartial" model="@business" />
        }
    </div>
}


