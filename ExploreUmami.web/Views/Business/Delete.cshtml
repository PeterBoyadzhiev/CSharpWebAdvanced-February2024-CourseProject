@model BusinessDeleteViewModel;
@{
    ViewData["Title"] = "Delete Business";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />

<form method="post" asp-action="Delete">
    <div class="container" style="display:inline">
        <div class="row">
            <div class="details-img col-4">
                <img class="card-img-top img-fluid img-thumbnail"
                     src="@Model.ImageUrl" alt="Business Image">
            </div>
            <div class="card col-8 border-0">
                <h4><b>Business name:</b> @Model.Title</h4>
                <h5><b>Located in:</b> @Model.Address, @Model.Prefecture</h5>
            </div>
            <div class="form-group mt-3 text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>
