@model AllViewModel

@{
    ViewData["Title"] = "All Businesses";
}

@if (!Model.Businesses.Any())
{
    <p>No businesses available in this area</p>
}
else
{
    <div class="row mb-5">
        @foreach (var business in Model.Businesses)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img class="card-img-top" src="@business.ImageURL" alt="@business.Title" style="height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Business" asp-action="Details" asp-route-id="@business.Id">@business.Title</a>
                        </h5>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Business" asp-action="All" asp-route-pageNumber="@(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : string.Empty)">
                    <a class="page-link" asp-controller="Business" asp-action="All" asp-route-pageNumber="@i">@i</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Business" asp-action="All" asp-route-pageNumber="@(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
                <li>

                </li>
            }   
        </ul>
        <div id="pagination-form">
            <form asp-controller="Business" asp-action="All">
                <label for="pageSize">Businesses per Page:</label>
                <select id="pageSize" name="pageSize" asp-for="PageSize">
                    <option value="3">3</option>
                    <option value="6">6</option>
                    <option value="9">9</option>
                </select>
                <button type="submit" class="btn btn-primary">Apply</button>
            </form>
        </div>   
    </nav>
}
