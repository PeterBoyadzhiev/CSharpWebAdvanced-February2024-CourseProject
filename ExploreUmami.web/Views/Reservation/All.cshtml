@model IEnumerable<ReservationDetailsViewModel>

@{
    ViewData["Title"] = "All Reservations";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="container">
    @foreach (var reservation in Model)
    {
        <div class="row mt-3">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img class="card-img-top" src="@reservation.Business.ImageUrl" alt="@reservation.Business.Title Image" style="height: 200px;">
                </div>
            </div>
            <div class="col-md-8">
                <h2>Reservation Details</h2>
                <p><b>ID:</b> @reservation.Id</p>
                <p><b>Business Name:</b> @reservation.Business.Title</p>
                <p><b>Reservation Date:</b> @reservation.ReservationDate.ToString("yyyy-MM-dd")</p>
                <p><b>Status:</b> @reservation.Status</p>
                <h2>User Information</h2>
                <p><b>User Name:</b> @reservation.User.UserName</p>
                <p><b>Notes:</b> @reservation.Notes</p>
            </div>
        </div>
        <hr />
    }
</div>