@model ReservationCompleteOrCancelViewModel

@{
    ViewData["Title"] = "Cancel Reservation Confirmation";
}

<div class="row mt-3">
    <div class="col-md-6 mx-auto">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr />
        <p>
            With this action you are confirming that the user has visited your business and can now leave reviews.
        </p>
        <form method="post">
            <div class="form-group mt-2">
                <label asp-for="Notes">Leave a message for this visit (Optional):</label>
                <textarea asp-for="Notes" class="form-control mt-2" rows="5"></textarea>
            </div>
            <p><small>* Your message will be visible to the user on their reservation details.</small></p>
            <div class="d-flex justify-content-between mt-2">
                <button type="submit" name="answer" value="true" class="btn btn-primary">Confirm Visit</button>
                <button type="submit" name="answer" value="false" class="btn btn-secondary">Go Back</button>
            </div>
        </form>
    </div>
</div>