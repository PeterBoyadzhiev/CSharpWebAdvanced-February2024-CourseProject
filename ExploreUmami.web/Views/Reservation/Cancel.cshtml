@model ReservationCancelViewModel

<div class="row mt-3">
    <div class="col-md-6 mx-auto">
        <h2 class="text-center">Cancel Reservation Confirmation</h2>
        <hr/>
        <p>
            Are you sure you want to cancel this reservation on @Model.ReservationDate.ToString("dd MMM yyyy") at @Model.ReservationDate.ToString("hh:mm")?</p>
        <form method="post">
            <div class="form-group mt-2">
                <label asp-for="Notes">Reason for Cancellation (Optional):</label>
                <textarea asp-for="Notes" class="form-control mt-2" rows="5"></textarea>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <button type="submit" name="answer" value="true" class="btn btn-primary">Confirm Cancellation</button>
                <button type="submit" name="answer" value="false" class="btn btn-secondary">Go Back</button>
            </div>
        </form>
    </div>
</div>
