@model BusinessAllViewModel

<div class="col-md-4 mb-3">
    <div class="card">
        <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Title" style="height: 200px;">
        <div class="card-body">
            <h5 class="card-title">
                <a asp-controller="Business" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a>
            </h5>
            <p class="card-text">@Model.Description</p>
            <a asp-controller="Business" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
        </div>
    </div>
</div>