@using static ExploreUmami.Common.ValidationConstants;
@model AddReviewModel

<div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2">
        <h1 class="text-center mb-4">Write a Review</h1>

        <form asp-action="Add">

            <div class="form-group">
                <label asp-for="Subject">Subject</label>
                <input asp-for="Subject" class="form-control" placeholder="Review Title...">
                <span asp-validation-for="Subject" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content">Review</label>
                <textarea asp-for="Content" rows="6" class="form-control" placeholder="Share your experience..."></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating">Rating</label>
                <select asp-for="Rating" class="form-control">
                    @for (int i = (int)Review.MinRating; i <= (int)Review.MaxRating; i++)
                    {
                        <option value="@i">@i Stars</option>
                    }
                </select>
                <span asp-validation-for="Rating" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Submit Review" />
            </div>
        </form>
    </div>
</div>