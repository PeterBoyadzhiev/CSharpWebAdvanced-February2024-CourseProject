@using static ExploreUmami.Common.ValidationConstants;
@model AddReviewModel

@{
    ViewData["Title"] = "Write a Review";
}

<div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>
        <hr />

        <form asp-action="Add">

            <div class="form-group mt-2">
                <label asp-for="Subject">Subject</label>
                <input asp-for="Subject" class="form-control mt-1" placeholder="Review Title...">
                <span asp-validation-for="Subject" class="small text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Content">Content</label>
                <textarea asp-for="Content" rows="6" class="form-control mt-1" placeholder="Share your experience..."></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Rating">Rating</label>
                <select asp-for="Rating" class="form-control mt-1">
                    @for (int i = (int)Review.MaxRating; i >= (int)Review.MinRating; i--)
                    {
                        <option value="@i">@i Stars</option>
                    }
                </select>
                <span asp-validation-for="Rating" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Submit Review" />
            </div>
        </form>
    </div>
</div>