@{
    ViewData["Title"] = "Error";
}

<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
        <br />
        <div class="row">
            <div class="col-md-10">
                <img src="https://ginbits.com/wp-content/uploads/2021/08/How-to-Fix-500-Internal-Server-Error.png" alt="Server Error" class="img-thumbnail">
                <div class="text-left h4">
                    <p>Oops! Something went wrong on our end.</p>
                    <p>The server encountered an error and couldn't complete your request.</p>
                    <p>We apologize for the inconvenience. Please try again later.</p>
                    <p>If the error persists, please contact the website administrator.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3"></div>
</div>